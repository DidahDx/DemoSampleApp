<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        tools:context=".MainActivity">

        <SearchView
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="@string/hint_text"
            android:inputType="textCapWords" />


        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/app_banner2">
        </com.google.android.gms.ads.AdView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="24dp"
                style="@style/CustomText"
                android:text="@string/topping" />

            <CheckBox
                android:id="@+id/topping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setTopping"
                android:paddingLeft="24dp"
                android:text="@string/pineapple"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/ice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setIce"
                android:paddingLeft="24dp"
                android:text="@string/iceCream"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/CustomText"
            android:text="@string/quantity" />

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ExpandableListView>
        <!--<com.google.android.gms.ads.AdView-->
            <!--xmlns:ads="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/adView2"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--ads:adSize="INTERSTITIAL"-->
            <!--ads:adUnitId="@string/interstial_test">-->
        <!--</com.google.android.gms.ads.AdView>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button

                android:layout_width="68dp"
                android:layout_height="50dp"
                android:onClick="decrement"
                android:text="@string/minus"
                android:visibility="visible" />

            <TextView
                android:id="@+id/dx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/initialValue"
                android:textColor="@android:color/black"
                android:textSize="30dp"
               />

            <Button

                android:layout_width="70dp"
                android:layout_height="50dp"
                android:onClick="increment"
                android:text="@string/plus" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomText"
            android:text="@string/HeadingPrice" />

        <TextView
            android:id="@+id/lef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="2dp"
            android:text="@string/initialPrice"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submitOrder"
            android:text="@string/OrderButton" />


        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Switch" />
        <!--<TabLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/tabs">-->

        <!--</TabLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/secondBtn"
                android:text="Second"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/bottom_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Bottom"
                android:layout_margin="8dp"/>
        </LinearLayout>



    </LinearLayout>

</ScrollView>
